{
  "name": "nodejs-training",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/salsita/nodejs-training"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npm run snyk protect",
    "build:client": "npm install --prefix client-auth",
    "start": "node ./src",
    "start:dev": "nodemon ./src",
    "lint": "eslint -c eslintrc.js .",
    "lintfix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test mocha --opts ./mocha.opts \"./{,!(node_modules)/**/}*.spec.js\"",
    "test:watch": "npm test -- --watch",
    "migrate": "node-pg-migrate",
    "snyk": "snyk",
    "apidoc": "apidoc -f \".*\\.js$\" -i src/actions/ -o apidoc/",
    "heroku-postbuild": "npm run migrate up -- --no-reject-unauthorized"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "apidoc": "0.20.1",
    "chai": "4.2.0",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-security": "1.4.0",
    "husky": "4.2.5",
    "koa-send": "5.0.0",
    "koa-static": "5.0.0",
    "lint-staged": "10.1.6",
    "mocha": "7.1.1",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "puppeteer": "2.1.1",
    "sinon": "9.0.2",
    "sinon-chai": "3.5.0",
    "supertest": "4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@koa/router": "9.0.0",
    "@salsita/errors": "1.0.2",
    "@salsita/koa-error-middleware": "1.1.1",
    "@salsita/koa-joi-middleware": "1.0.3",
    "@salsita/koa-jwt-auth": "1.0.2",
    "@salsita/koa-server": "1.3.1",
    "@salsita/prune-values": "1.0.1",
    "@salsita/psql": "1.0.2",
    "dotenv": "8.2.0",
    "http-status": "1.4.2",
    "is-wsl": "2.1.1",
    "jsonwebtoken": "8.5.1",
    "koa-passport": "4.1.3",
    "lodash": "4.17.15",
    "node-pg-migrate": "4.6.1",
    "passport-github": "1.1.0",
    "passport-google-oauth": "2.0.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.0.2",
    "pretty-error": "2.1.1",
    "snyk": "1.306.0",
    "squel": "5.13.0",
    "winston": "3.2.1"
  },
  "lint-staged": {
    "*.js": [
      "npm run lintfix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "12.16.2",
    "npm": "6.14.4"
  },
  "snyk": true
}
